{% extends 'AppBundle:Default:index.html.twig' %}


    {% block pictures %}
        {{ include('AppBundle:Default:pic_nav.html.twig') }}

        {% for pic in pictures %}
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                <a href="{{ url('show_picture', {picture_id: pic.photo_id, tag: app.request.get('tag')}) }}">
                    {{ pic.img|raw }}
                </a>
            </div>
        {% endfor %}

    {% endblock %}

    {% block title %}{{ app.request.get('tag')|capitalize }} Photo Gallery{% endblock %}
